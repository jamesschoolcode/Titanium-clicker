    }
    .stocks-section h4 {
      margin: 0 0 8px 0;
      letter-spacing: 0.5px;
      font-weight: 700;
      font-size: 1.13em;
    }
    .stock-list { list-style: none; padding: 0; margin: 0; }
    .stock-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 10px;
      padding: 7px 0;
      border-bottom: 1px solid #22264a;
      font-size: 1em;
    }
    .stock-row:last-child { border-bottom: none; }
    .stock-col {
      flex: 1;
      text-align: center;
    }
    .stock-col:first-child { text-align: left; }
    .stock-col:last-child { text-align: right; }
    .stock-btn {
      padding: 5px 12px;
      border-radius: 5px;
      font-weight: 700;
      font-size: 0.98em;
      margin-left: 8px;
